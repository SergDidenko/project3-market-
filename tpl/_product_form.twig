{% extends '_template.twig' %}
{% block content %}
   <form action="" method="POST" class="form-horizontal" role="form">
    		<div class="form-group">
    			<legend>{{ title }}</legend>
    		</div>
    		<div class="form-group">
    			<label for="inputName" class="col-sm-2 control-label">Name:</label>
    			<div class="col-sm-10">
    				<input type="text" name="name" id="inputName" class="form-control" value="{{ product.name }}" title="">
    				{% for e in err_obj.name %}
    				    {{ e }}
    				{% endfor %}
    			</div>
    		</div>
    		{% for c in categories %}
	    		<div class="checkbox">
	    			<label>
                        {% if button == "Update" %}
                        <input type="checkbox" name="category[]" id="inputProduct" value="{{ c.id }}"  
                        {% for cat in product.categories %}
                            {% if cat.id == c.id %}
                                checked="checked"
                            {% endif %}
                        {% endfor %} >
                        {{ c.name }}
                        {% else %}
	    				<input type="checkbox" name="category[]" id="inputProduct" value="{{ c.id }}" {% if loop.first %} checked="checked" {% endif %}>
	    				{{ c.name }}
                        {% endif %}                     
	    			</label>
	    		</div>
    		{% endfor %}
    
    		<div class="form-group">
    			<div class="col-sm-10 col-sm-offset-2">
    				<button type="submit" class="btn btn-sm btn-primary">{{ button }}</button>
                {% if button == "Update" %}
                    <a  href="/" type="button" class="btn btn-sm btn-danger">Cancel</a>
                {% endif %}
                </div>
    		</div>
    </form> 
{% endblock %}